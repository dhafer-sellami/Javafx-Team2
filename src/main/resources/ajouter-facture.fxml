<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.FactureFormController"
            prefHeight="600" prefWidth="800">


    <VBox layoutX="240" layoutY="150"
          spacing="30"
          alignment="TOP_CENTER"
          prefWidth="320"
          prefHeight="250"
          style="-fx-border-color: #16a085;
                 -fx-border-width: 3px;
                 -fx-border-radius: 15px;
                 -fx-background-radius: 15px;
                 -fx-padding: 20px;
                 -fx-background-color: #e8f6f3;
                 -fx-effect: dropshadow(gaussian, #16a085, 10, 0.5, 0, 0);">

        <Label text="AJOUTER UNE FACTURE"
               wrapText="true"
               style="-fx-text-fill: #16a085;
                      -fx-font-size: 18px;
                      -fx-font-weight: bold;" />

        <TextField fx:id="prixField"
                   promptText="Prix"
                   style="-fx-border-color: #16a085; -fx-border-radius: 5px;" />

        <Button fx:id="saveButton"
                text="Enregistrer"
                onAction="#ajouterFacture"
                style="-fx-background-color: #16a085;
                       -fx-text-fill: white;
                       -fx-background-radius: 10px;
                       -fx-font-weight: bold;" />

    </VBox>
</AnchorPane>
