    <center>
        <HBox alignment="CENTER" spacing="50" BorderPane.alignment="CENTER">
            <!-- Formulaire à gauche -->
            <VBox spacing="20" alignment="TOP_CENTER"
                   prefWidth="320" maxHeight="360"
                  style="-fx-border-color: #16a085;
                     -fx-border-width: 2px;
                     -fx-border-radius: 12px;
                     -fx-background-radius: 12px;
                     -fx-padding: 15px;
                     -fx-background-color: #e8f6f3;
                     -fx-effect: dropshadow(gaussian, #16a085, 8, 0.3, 0, 0);">

                <Label text="PRENDRE UN RENDEZ VOUS"
                       wrapText="true"
                       style="-fx-text-fill: #16a085;
                          -fx-font-size: 16px;
                          -fx-font-weight: bold;" />

                <TextField fx:id="etatField"
                           promptText="NOM"
                           style="-fx-border-color: #16a085; -fx-border-radius: 5px; -fx-padding: 8px;" />

                <TextField fx:id="emailField"
                           promptText="Email"
                           style="-fx-border-color: #16a085; -fx-border-radius: 5px; -fx-padding: 8px;" />

                <TextField fx:id="numField"
                           promptText="Numéro"
                           style="-fx-border-color: #16a085; -fx-border-radius: 5px; -fx-padding: 8px;" />

                <DatePicker fx:id="datePicker"
                            style="-fx-border-color: #16a085; -fx-border-radius: 5px;" />

                <Button fx:id="saveButton"
                        text="Enregistrer"
                        onAction="#handleSave"
                        style="-fx-background-color: #16a085;
                           -fx-text-fill: white;
                           -fx-background-radius: 8px;
                           -fx-font-weight: bold;" />
                <TextField fx:id="userQuestionField"
                           promptText="Posez votre question ici..."
                           style="-fx-border-color: #16a085; -fx-border-radius: 5px; -fx-padding: 8px;" />

                <Button fx:id="btnAide"
                        text="Envoyer à Gemini"
                        onAction="#handleAIHelp"
                        style="-fx-background-color: #2980b9;
               -fx-text-fill: white;
               -fx-background-radius: 8px;
               -fx-font-weight: bold;" />


                <TextArea fx:id="txtChatBot"
                          promptText="Réponse du chatbot"
                          wrapText="true"
                          editable="false"
                          prefHeight="100"
                          style="-fx-border-color: #16a085; -fx-border-radius: 5px;" />
            </VBox>

            <!-- Image à droite -->
            <ImageView fitWidth="300" fitHeight="300" preserveRatio="true">
                <image>
                    <Image url="@book-img.png" />
                </image>
            </ImageView>
