<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.cell.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="entities.MedicamentController"  >

<!--    stylesheets="@/medicament.css"-->
    <!-- NAVIGATION BAR -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="navbar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>



<!--            <Label text="MediTrack" styleClass="logo"/>-->

            <Region HBox.hgrow="ALWAYS"/>

<!--            <Hyperlink text="Home" styleClass="nav-link"/>-->
<!--            <Hyperlink text="About" styleClass="nav-link"/>-->
<!--            <Hyperlink text="Doctors" styleClass="nav-link"/>-->
<!--            <Hyperlink text="Book an appointment" styleClass="nav-link"/>-->
<!--            <Hyperlink text="Sign in" styleClass="nav-link"/>-->
<!--            <Hyperlink text="Sign up" styleClass="nav-link"/>-->
        </HBox>
    </top>

    <!-- CONTENU PRINCIPAL DANS CENTER -->
    <center>
        <VBox spacing="10" alignment="CENTER"
              style="-fx-padding: 20; -fx-background-color: rgb(255,255,255);">

            <Label text="Gestion des Médicaments"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #101710;"/>

            <!-- Formulaire -->
            <HBox spacing="10">
                <Label text="Nom:"/>
                <TextField fx:id="nomField" promptText="Entrez le Nom"/>
                <Label text="Description:"/>
                <TextField fx:id="descriptionField" promptText="Entrez la Description"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Email:"/>
                <TextField fx:id="emailField" promptText="Entrez l'Email"/>
                <Label text="Téléphone:"/>
                <TextField fx:id="phoneField" promptText="Entrez le Téléphone"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Dosage:"/>
                <TextField fx:id="dosageField" promptText="Entrez le Dosage (ex: 1 tablet)"/>
                <Label text="Horaire:"/>
                <TextField fx:id="scheduleField" promptText="Entrez l'Horaire (ex: 8:00 AM, 2:00 PM)"/>
                <Button fx:id="addButton" text="Ajouter" onAction="#ajouterMedicament"
                        style="-fx-background-color: green; -fx-text-fill: white;"/>
                <Button fx:id="updateButton" text="Modifier" onAction="#modifierMedicament"
                        style="-fx-background-color: green; -fx-text-fill: white;"/>
            </HBox>

            <HBox spacing="10">
                <Label text="ID:"/>
                <TextField fx:id="deleteIdField" promptText="Entrez l'ID"/>
                <Button fx:id="deleteButton" text="Supprimer" onAction="#supprimerMedicament"
                        style="-fx-background-color: green; -fx-text-fill: white;"/>
            </HBox>

            <!-- Navigation boutons -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="generateReportButton" text="Générer Rapport"
                        style="-fx-background-color: green; -fx-text-fill: white;"/>
                <Button fx:id="assistantButton" text="Assistant IA"
                        style="-fx-background-color: blue; -fx-text-fill: white;"/>
                <Button fx:id="dashboardButton" text="Tableau de Bord" onAction="#openDashboard"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white;"/>
            </HBox>

            <!-- Table -->
            <VBox>
                <TableView fx:id="medicamentsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idCol" text="ID" prefWidth="100">
                            <cellValueFactory>
                                <PropertyValueFactory property="id"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="nomCol" text="Nom" prefWidth="150">
                            <cellValueFactory>
                                <PropertyValueFactory property="nom"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="descriptionCol" text="Description" prefWidth="200">
                            <cellValueFactory>
                                <PropertyValueFactory property="description"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="emailCol" text="Email" prefWidth="200">
                            <cellValueFactory>
                                <PropertyValueFactory property="email"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="phoneCol" text="Téléphone" prefWidth="150">
                            <cellValueFactory>
                                <PropertyValueFactory property="phone"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="dosageCol" text="Dosage" prefWidth="150">
                            <cellValueFactory>
                                <PropertyValueFactory property="dosage"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="scheduleCol" text="Horaire" prefWidth="200">
                            <cellValueFactory>
                                <PropertyValueFactory property="schedule"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <Pagination fx:id="pagination" pageCount="1" maxPageIndicatorCount="5"
                            style="-fx-padding: 10;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
